<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Edit_Doctor">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="10dp"
        android:text="Edit doctor"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:gravity="bottom|center"
        android:background="@drawable/btn_style3"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="10dp"
        android:text="id of doctor"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:visibility="gone"
        android:id="@+id/id_edit_doc"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:id="@+id/name_edit_doc"
        android:background="@drawable/text_field"
        android:drawableStart="@drawable/ic_person"
        android:drawablePadding="12dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:hint="Name of doctor"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:id="@+id/spec_edit_doc"
        android:background="@drawable/text_field"
        android:drawableStart="@drawable/ic_spec"
        android:drawablePadding="12dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:hint="Specialty"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:id="@+id/loc_edit_doc"
        android:background="@drawable/text_field"
        android:drawableStart="@drawable/ic_location"
        android:drawablePadding="12dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:hint="Location"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:id="@+id/phone_edit_doc"
        android:background="@drawable/text_field"
        android:drawableStart="@drawable/ic_phone"
        android:drawablePadding="12dp"
        android:inputType="phone"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:hint="Phone number"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:id="@+id/email_edit_doc"
        android:background="@drawable/text_field"
        android:drawablePadding="12dp"
        android:drawableStart="@drawable/ic_email"
        android:inputType="textEmailAddress"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:hint="Email"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/cancel_doc_edit"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:background="@drawable/btn_style1"/>
        <Button
            android:id="@+id/save_doc_edit"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_gravity="right"
            android:text="Save"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/btn_style1"
            android:backgroundTint="@color/purple_200"/>
    </LinearLayout>
</LinearLayout>